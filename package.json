{
	"name": "tethr",
	"author": "Baku Hashimoto <mail@baku89.com> (https://baku89.com)",
	"version": "0.1.0",
	"description": "Tethers USB-connected cameras, webcam, and smartphone camera from browser",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"serve": "yarn workspace @tethr/demo run serve",
		"lint": "eslint --fix src --ext .ts --ignore-path .gitignore",
		"format": "prettier --write src",
		"fix": "npm run format && npm run lint",
		"build": "tsc --outDir lib --declaration",
		"build:demo": "yarn workspace @tethr/demo build",
		"prepare": "npm run build"
	},
	"private": true,
	"workspaces": [
		"demo/"
	],
	"files": [
		"lib"
	],
	"homepage": "https://baku89.github.io/tethr/",
	"license": "MIT",
	"dependencies": {
		"bim": "^1.3.3",
		"date-format-parse": "^0.2.7",
		"eventemitter3": "^4.0.7",
		"lodash": "^4.17.21",
		"promise-queue": "^2.2.5",
		"sleep-promise": "^9.1.0",
		"typescript-memoize": "^1.1.1"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.172",
		"@types/promise-queue": "^2.2.0",
		"@types/w3c-image-capture": "^1.0.5",
		"@types/w3c-web-usb": "^1.0.5",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"prettier": "^2.3.2",
		"typescript": "^5.1.3"
	}
}
