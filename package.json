{
	"name": "tethr",
	"author": "Baku Hashimoto <mail@baku89.com> (https://baku89.com)",
	"version": "0.1.0",
	"description": "Tethers USB-connected cameras, webcam, and smartphone camera from browser",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"serve": "parcel demo/index.html --public-url / --dist-dir public --https",
		"lint": "eslint --fix --ext .ts --ignore-path .gitignore .",
		"format": "prettier --write src demo",
		"fix": "npm run format && npm run lint",
		"build": "tsc --project tsconfig.prod.json --outDir lib",
		"build:demo": "parcel build demo/index.html --public-url . --dist-dir public --no-source-maps",
		"deploy:demo": "npm run build:demo; gh-pages -d public",
		"prepare": "npm run build"
	},
	"files": [
		"dist"
	],
	"homepage": "https://baku89.github.io/tethr/",
	"license": "MIT",
	"dependencies": {
		"bim": "^1.3.3",
		"date-format-parse": "^0.2.7",
		"eventemitter3": "^4.0.7",
		"lodash": "^4.17.21",
		"promise-queue": "^2.2.5",
		"sleep-promise": "^9.1.0",
		"typescript-memoize": "^1.1.1",
		"webusb": "^2.2.0"
	},
	"devDependencies": {
		"@parcel/transformer-stylus": "^2.9.2",
		"@parcel/transformer-typescript-tsc": "^2.9.2",
		"@parcel/transformer-vue": "2.9.2",
		"@parcel/validator-eslint": "^2.9.2",
		"@parcel/validator-typescript": "^2.9.2",
		"@types/file-saver": "^2.0.3",
		"@types/lodash": "^4.14.172",
		"@types/promise-queue": "^2.2.0",
		"@types/w3c-image-capture": "^1.0.5",
		"@types/w3c-web-usb": "^1.0.5",
		"@types/wicg-file-system-access": "^2020.9.5",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"file-saver": "^2.0.5",
		"parcel": "^2.9.2",
		"prettier": "^2.3.2",
		"typescript": "^5.1.3",
		"vue": "^3.2.9"
	},
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"targets": {
		"main": false,
		"types": false
	}
}
