{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"verbatimModuleSyntax": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"declaration": true,
		"lib": ["esnext", "dom", "dom.iterable"],
	},
	"exclude": ["node_modules"],
	"include": ["**/*.ts"],
}
