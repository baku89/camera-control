{
	"compilerOptions": {
		"target": "es2021",
		"module": "esnext",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["@types/w3c-web-usb", "@types/w3c-image-capture"],
		"typeRoots": ["node_modules/@types", "src", "demo"],
		"paths": {
			"*": ["src/@types/*"],
			"~/*": ["./*"]
		},
		"lib": ["esnext", "dom", "dom.iterable"]
	},
	"include": ["src/**/*.ts", "demo/**/*.ts"],
	"exclude": ["node_modules"]
}
