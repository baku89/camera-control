{
	"compilerOptions": {
		"target": "es2022",
		"module": "umd",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/@types/*"],
			"~/*": ["./*"]
		},
		"lib": ["esnext", "dom", "dom.iterable"]
	},
	"include": ["src/**/*.ts", "demo/**/*.ts"],
	"exclude": ["node_modules"]
}
